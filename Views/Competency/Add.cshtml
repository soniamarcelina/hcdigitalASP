 @{
    ViewData["Title"] = "Add Competency";
    Layout = "~/Views/Shared/_Sidebar.cshtml";
}

<div class="col-lg-12">

    <!-- Dropdown Card Example -->
    <div class="card shadow mb-4">
        <!-- Card Header - Dropdown -->
        <div
            class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary text-uppercase">Add Competency</h6>
        </div>
        
        <div class="card-body">
        <form asp-action="Insert">
          <table class="table table-sm table-add table-borderless">
           
          <tr>
                <td>ID</td>
            
                <td><input class="form-control form-control-bot-border" required type="id" name="id" placeholder="Masukkan ID"></td>
            </tr>  
          <tr>
                <td>Nama</td>
                
                <td><input class="form-control form-control-bot-border" required type="text" name="name" placeholder="Masukkan Nama"></td>
            </tr>

            <tr>
                <td>Skill Group</td>
                
                <td><input class="form-control form-control-bot-border" required type="text" name="skill_group" placeholder="Masukkan Skill"></td>
            </tr>

            <tr>
                <td>Sub Skill Group </td>
                
                <td><input class="form-control form-control-bot-border" required type="text" name="sub_skill_group" placeholder="Masukkan Sub Skill"></td>
            </tr>

            <tr>
                <td>Definisi</td>
                
                <td><textarea class="form-control form-control-bot-border" cols="30" rows="3" name="definition" placeholder="Masukkan Definisi"></textarea></td>
            </tr>

            <tr>
                <td>Level</td>
                
                <td><select class="form-control form-control-bot-border" name="level">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    </select>
            </tr>

            <tr>
                <td>Indicator</td>
                
                <td><textarea class="form-control form-control-bot-border" cols="30" rows="3" name="indicator" placeholder="Masukkan Indikator"></textarea></td>
            </tr>

            <tr>
                <td></td>
                <td><input class="btn btn-success" type="submit" name="simpan" value="Submit"></td>
            </tr>
             </table>
        </form>
    </div>
    </div>
</div>