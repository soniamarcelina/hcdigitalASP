
@{
    ViewData["Title"] = "Add TKJP";
    Layout = "~/Views/Shared/_Sidebar.cshtml";
}
<div class="col-lg-12">

    <!-- Dropdown Card Example -->
    <div class="card shadow mb-4">
        <!-- Card Header - Dropdown -->
        <div
            class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary text-uppercase">Add Employee TKJP</h6>
        </div>
        
        <div class="card-body">

        <form asp-action="Insert">
          <table class="table table-sm table-add table-borderless">
            <tr>
                <td class="w-25">No Pekerja</td>
                
                <td><input class="form-control form-control-bot-border" required type="text" name="Nopek" placeholder="Masukan No Pekerja (existing)"></td>
            </tr>
            <tr>
                <td class="w-25">Nama Pekerja</td>
                
                <td><input class="form-control form-control-bot-border" type="text" name="Nama" placeholder="Masukan nama pekerja"></td>
            </tr>
            <tr>
                <td>Status</td>
                
                <td><select class="form-control form-control-bot-border" name="status">
                    <option value="active">Aktif</option>
                    <option value="candidate">Candidate</option>
                    <option value="inactive">Tidak Aktif</option>
                </select>
            </tr>       
            <tr>
                <td>Tempat Lahir</td>
                
                <td><input class="form-control form-control-bot-border" type="text" name="Tempat_Lahir" placeholder="Tempat Lahir"></td>

            </tr>

            <tr>
                <td>Tanggal Lahir</td>

                <td><input class="form-control form-control-bot-border" type="date" name="Tgl_Lahir" placeholder="Tanggal Lahir"></td>

            </tr>

            <tr>
                <td>Tingkat Pendidikan</td>
                
                <td><select class="form-control form-control-bot-border" name="Tingkat_Pendidikan">
                    <option value="sd">SD</option>
                    <option value="sma">SMA</option>
                    <option value="d1">D1</option>
                    <option value="d2">D2</option>
                    <option value="d3">D3</option>
                    <option value="s1">S1</option>
                    <option value="s2">S2</option>
                    <option value="s3">S3</option>
                </select>  
            </tr>

            <tr>
                <td>Institusi Pendidikan Terakhir </td>
                
                <td><input class="form-control form-control-bot-border" type="text" name="Last_Education_Institution" placeholder="Institusi Pendidikan Terakhir"></td>
            </tr>

            <tr>
                <td>Jurusan Pendidikan Terakhir </td>
                
                <td><input class="form-control form-control-bot-border" type="text" name="Jurusan_Pendidikan_Terakhir" placeholder="Jurusan Pendidikan Terakhir"></td>
            </tr>

            <tr>
                <td>Pengalaman Kerja Pertama</td>
                <td><input class="form-control form-control-bot-border" type="text" name="Pengalaman_Kerja_Pertama" placeholder="Pengalaman Kerja Pertama"></td>
            </tr>

            <tr>
                <td>Bergabung Pertama kali di Pertamina</td>
                <td><input class="form-control form-control-bot-border" type="text" name="Bergabung_Pertama_kali_di_Pertamina" placeholder="Begabung Pertama Kali di Pertamina"></td>
            </tr>

            <tr>
                <td>Nama Perusahaan Sebelum SHU</td>
                <td><input class="form-control form-control-bot-border" type="text" name="Nama_Perusahaan_Sebelum_SHU" placeholder="Nama Perusahaan Sebelum SHU"></td>
            </tr>

            <tr>
                <td>KTP No</td>
                <td><input class="form-control form-control-bot-border" type="number" name="KTP_No" placeholder="KTP No"></td>
            </tr>

            <tr>
                <td>NPWP No</td>
                <td><input class="form-control form-control-bot-border" type="number" name="NPWP_No" placeholder="NPWP No"></td>
            </tr>

            <tr>
                <td>Status Pernikahan</td>
                
                <td><select class="form-control form-control-bot-border" name="Status_Pernikahan">
                    <option value="lajang">Lajang</option>
                    <option value="nikah">Nikah</option>
                    <option value="duda">Duda</option>
                    <option value="janda">Janda</option>
                </select>
            </tr>

            <tr>
                <td>Jumlah Tanggungan</td>
                <td><input class="form-control form-control-bot-border" required type="text" name="Jumlah_Tanggungan" placeholder="Jumlah Tanggungan"></td>
            </tr>

            <tr>
                <td>Jenis Kelamin</td>
                
                <td><select class="form-control form-control-bot-border" name="Jenis_Kelamin">
                    <option value="pria">Pria</option>
                    <option value="wanita">Wanita</option>
                </select>
            </tr>

            <tr>
                <td>Agama</td>

                <td><select class="form-control form-control-bot-border" name="Agama">
                    <option value="islam">Islam</option>
                    <option value="kristen">Kristen</option>
                    <option value="protestan">Protestan</option>
                    <option value="hindu">Hindu</option>
                    <option value="buddha">Buddha</option>
                    <option value="khonghucu">Khonghucu</option>
                    <option value="advent">Advent</option>
                </select>
            </td>

            <tr>
                <td>Phone</td>
                <td><input class="form-control form-control-bot-border" type="text" name="Phone" placeholder="Phone"></td>
            </tr>

            <tr>
                <td>Personal Email</td>
                <td><input class="form-control form-control-bot-border" type="email" name="Personal_email" placeholder="Personal Email"></td>
            </tr>

            <tr>
                <td>Email Pertamina</td>
                
                <td><input class="form-control form-control-bot-border" type="email" name="email_pertamina" placeholder="Email Pertamina"></td>
            </tr>

            <tr>
                <td>Alamat</td>
                <td><input class="form-control form-control-bot-border" type="text" name="Alamat" placeholder="Alamat"></td>
            </tr>

            <tr>
                <td>Kecamatan</td>
                <td><input class="form-control form-control-bot-border" type="text" name="Kecamatan" placeholder="Kecamatan"></td>
            </tr>

            <tr>
                <td>Kota</td>
                
                <td><input class="form-control form-control-bot-border" type="text" name="Kota" placeholder="Kota"></td>
            </tr>

            <tr>
                <td>Provinsi</td>
                
                <td><input class="form-control form-control-bot-border" type="text" name="Provinsi" placeholder="Provinsi"></td>
            </tr>

            <tr>
                <td>Kode Pos</td>                
                <td><input class="form-control form-control-bot-border" type="number" name="Kode_Pos" placeholder="Kode Pos"></td>
            </tr>

            <tr>
                <td>No. Kartu Keluarga</td>
                
                <td><input class="form-control form-control-bot-border" type="number" name="No_Kartu_Keluarga" placeholder="No. Kartu Keluarga"></td>
            </tr>

            <tr>
                <td>BPJS Tenaga Kerja</td>
                
                <td><input class="form-control form-control-bot-border" type="number" name="BPJS_Tenaga_Kerja" placeholder="BPJS Tenaga Kerja"></td>
            </tr>

            <tr>
                <td>BPJS Kesehatan</td>
                
                <td><input class="form-control form-control-bot-border" type="number" name="BPJS_Kesehatan" placeholder="BPJS Kesehatan"></td>
            </tr>

            <tr>
                <td>BPJS Pensiun</td>
                
                <td><input class="form-control form-control-bot-border" type="number" name="BPJS_Pensiun" placeholder="BPJS Pensiun"></td>
            </tr>

            <tr>
                <td>No. Kontak Darurat</td>
                
                <td><input class="form-control form-control-bot-border" type="number" name="Nomor_Kontak_Emergency" placeholder="No. Kontak Darurat"></td>
            </tr>

            <tr>
                <td>Nama Kontak Darurat</td>
                
                <td><input class="form-control form-control-bot-border" type="text" name="Nama_Kontak_Emergency" placeholder="Nama Kontak Darurat"></td>
            </tr>

            <tr>
                <td>Status Hubungan</td>
                
                <td><input class="form-control form-control-bot-border" type="text" name="Relationship" placeholder="Status Hubungan"></td>

            </tr>

            <tr>
                <td></td>
                <td><input class="btn btn-success" type="submit" name="simpan" value="submit"></td>
            </tr>
             </table>
        </form>
    </div>
    </div>
</div>